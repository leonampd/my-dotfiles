{
  "languageserver": {
    "clojure-lsp": {
      "command": "clojure-lsp",
      "filetypes": [
        "clojure"
      ],
      "rootPatterns": [
        "project.clj",
        "deps.edn"
      ],
      "additionalSchemes": [
        "jar",
        "zipfile"
      ],
      "trace.server": "verbose",
      "initializationOptions": {
        "source-paths": [
          "src",
          "test"
        ],
        "keep-require-at-start?": true,
        "project-specs": [
          {
            "project-path": "deps.edn",
            "classpath-cmd": [
              "clj",
              "-Spath"
            ]
          }
        ]
      }
    }
  }
}
